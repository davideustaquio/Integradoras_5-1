<!DOCTYPE html>
<html lang="pt-br">
<head>
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<link href="~/css/global.css" rel="stylesheet" />
	<link href="~/css/menu.css" rel="stylesheet" />
	<link href="~/css/posAdocao/form.css" rel="stylesheet" />
	<link href="~/css/posAdocao/sidebar.css" rel="stylesheet" />
	<link href="~/css/preAdocao/form.css" rel="stylesheet" />
	<link href="~/css/preAdocao/sidebar.css" rel="stylesheet" />
	<title>@ViewData["Title"] - Cão Lendário</title>
</head>
<body>
	<div class="top-bar">
		<button class="btn-menu">
			<i class="fa fa-bars" aria-hidden="true"></i>
		</button>
		<button class="btn-menu">
			<i class="fa fa-question-circle" aria-hidden="true"></i>
		</button>
	</div>
	<div class="page">
		@{
			if (this.ViewContext.RouteData.Values["controller"].ToString() != "Login")
			{
				<nav>
					<img id="img-logo" src="~/assets/Logo.png" alt="Logo Cão Lendário" />
					<ul>
						<li class="@(this.ViewContext.RouteData.Values["controller"].ToString() == "Dashboard" ? "active" : "")">
							<img src="~/assets/Dashboard.svg" />
							<a asp-controller="Dashboard" asp-action="Index">Dashboard</a>
						</li>
						<li class="@(this.ViewContext.RouteData.Values["controller"].ToString() == "Animal" ? "active" : "")">
							<i class="fa fa-paw"></i>
							<a asp-controller="Animal" asp-action="New">Animais</a>
						</li>
						<li class="@(this.ViewContext.RouteData.Values["controller"].ToString() == "ProcedimentosPreAdocao" ? "active" : "")">
							<img src="~/assets/Pre.svg" />
							<a asp-controller="ProcedimentosPreAdocao" asp-action="New">Pré adoção</a>
						</li>
						<li class="@(this.ViewContext.RouteData.Values["controller"].ToString() == "Adocao" ? "active" : "")">
							<img src="~/assets/Adoção.svg" />
							<a asp-controller="Adocao" asp-action="Index">Adoção</a>
						</li>
						<li class="@(this.ViewContext.RouteData.Values["controller"].ToString() == "ProcedimentosPosAdocao" ? "active" : "")">
							<img src="~/assets/Clock.svg" />
							<a asp-controller="ProcedimentosPosAdocao" asp-action="New">Pos adoção</a>
						</li>
					</ul>
					<li id="logoff">
						<i class="fa fa-power-off"></i>
						<a href="#">Sair</a>
					</li>
				</nav>
			}
		}
		<section>@RenderBody()</section>
	</div>
	<!--<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>-->
	<script src="~/js/site.js" asp-append-version="true"></script>
	@RenderSection("Scripts", required: false)
</body>
</html>